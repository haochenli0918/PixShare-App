<%- include("../partials/header") %>

<!-- corresponding to the specifc post page since it is a form -->

	<div class = 'row'>
	<h1 class="text-center">
	 Create a New Campground
	</h1>
	<div style = "min-width: 900px; width:30%; margin:30px auto;">
	<!-- connect to the post page CREATE page	 -->	
		<form action = "/campgrounds" method = "POST">
		<div class = "form-group">
			<input class = "form-control" type = "text" name = "name" placeholder = "name">
		</div>
		<div class = "form-group">
			<input class = "form-control" type = "number" name = "price" placeholder = "price" min = "0.01" step = "0.01">
		</div>
		<div class = "form-group">
			<input class = "form-control" type = "text" name = "image" placeholder = "image url">
		</div>
		<div class = "form-group">
			<input class = "form-control" type = "text" name = "description" placeholder = "your comment">
		</div>
		<div class="form-group">
    	<label for="location">Share your positon!(Optional)</label>
    	<input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
		</div>
		<div class = "form-group">
		<button class = "btn btn-lg btn-default btn-block btn-primary">
			 Submit
		</button>
		</div>
	</form>
	<a href = "/campgrounds">Go Back</a>
	

<%- include("../partials/footer") %>